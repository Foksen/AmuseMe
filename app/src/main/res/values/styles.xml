<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="themeCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="textTitleStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="controlBarTextStyle" parent="textTitleStyle">
        <item name="android:textSize">@dimen/controlBarTitleSize</item>
    </style>

    <style name="themeItemTitleStyle" parent="textTitleStyle">
        <item name="android:textSize">@dimen/themeItemTitleSize</item>
    </style>

    <style name="amusementTitleStyle" parent="textTitleStyle">
        <item name="android:textSize">@dimen/amusementTitleSize</item>
    </style>


    <style name="textContentStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <style name="generatorHelpTextStyle" parent="textContentStyle">
        <item name="android:textSize">@dimen/generatorHelpSize</item>
    </style>

    <style name="themeItemDescStyle" parent="textContentStyle">
        <item name="android:textSize">@dimen/themeItemDescSize</item>
    </style>

    <style name="amusementDescStyle" parent="textContentStyle">
        <item name="android:textSize">@dimen/amusementDescSize</item>
    </style>

    <style name="amusementButtonsTextStyle" parent="textContentStyle">
        <item name="android:textSize">@dimen/amusementButtonsTextSize</item>
    </style>

</resources>